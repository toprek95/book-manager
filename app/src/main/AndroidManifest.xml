<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/book_manager_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebsiteActivity"></activity>
        <activity android:name=".FavouriteBooksActivity"
            android:label="@string/favourite_books_activity_label"/>
        <activity android:name=".WishlistBooksActivity"
            android:label="@string/wishlist_activity_label"/>
        <activity android:name=".AlreadyReadBooksActivity"
            android:label="@string/already_read_activity_label"/>
        <activity android:name=".CurrentlyReadingBooksActivity"
            android:label="@string/currently_reading_activity_label"/>
        <activity android:name=".BookActivity"
            android:label="@string/book_activity_label"/>
        <activity android:name=".AllBooksActivity"
            android:label="@string/all_books_activity_label"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>